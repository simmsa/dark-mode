{
    "compilerOptions":{
        "target": "es5",
        "rootDir": "src",
        "outDir": "build",
        "jsx": "react",
        "module": "commonjs",
        "skipLibCheck": true,
        "strict": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "lib": ["ES6", "dom"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "lib"
    ],
    "types": [
      "chrome"
    ]
}
