{
  "manifest_version": 2,
  "name": "Dark Mode",
  "update_url": "https://www.github.com/simmsa/dark-mode",
  "version": "0.5.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content-bundle.js"
      ],
      "run_at": "document_start",
      "css": [
        "styles/css/dark-mode.css"
      ],
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "background": {
    "scripts": [
      "dist/background-bundle.js"
    ]
  },
  "web_accessible_resources": [
    "styles/css/dark-mode.css"
  ],
  "description": "Making the web easier to read.",
  "icons": {
    "16": "img/dark-mode-on-16.png",
    "48": "img/dark-mode-on-48.png",
    "128": "img/dark-mode-on-128.png"
  },
  "browser_action": {
    "default_icon": "img/dark-mode-on-48.png",
    "default_title": "Dark mode settings",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "notifications",
    "webNavigation"
  ],
  "commands": {
    "toggle-dark-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Toggle dark mode"
    }
  }
}
