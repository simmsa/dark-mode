{
    "manifest_version": 2,
    "name": "Dark Mode - Rest your eyes",
    "version": "0.3",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js":  ["lib/jquery.min.js","common.js", "content.js"],
            "run_at": "document_start",
            "css": ["dark-mode.css"],
            "all_frames": true,
            "matches_about_blank": true
        }
    ],
    "background": {
        "scripts": ["common.js", "background.js"]
    },
    "web_accessible_resources": [
        "dark-mode.css"
    ],
    "description": "Make websites easier on your eyes.",
    "icons": {
        "128": "img/dark-mode-128.png",
        "48": "img/dark-mode-48.png",
        "16": "img/dark-mode-16.png"
    },
    "browser_action": {
        "default_icon": "img/dark-mode-48.png",
        "default_title": "Dark mode settings",
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "contextMenus"
    ],
    "commands": {
        "toggle-dark-mode": {
            "suggested_key": {
                "default": "Ctrl+Shift+I"
            },
            "description": "Toggle dark mode"
        }
    }
}
