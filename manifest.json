{
    "manifest_version": 2,
    "name": "Dark Mode - Rest your eyes",
    "version": "0.3",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js":  ["lib/jquery.min.js", "build/Message.js", "build/ContentSender.js", "build/content.js"],
            "run_at": "document_start",
            "css": ["dark-mode.css"],
            "all_frames": true,
            "matches_about_blank": true
        }
    ],
    "background": {
        "scripts": ["lib/resemblejs/resemble.js", "./lib/urijs/src/URI.min.js", "build/SettingId.js", "build/DefaultState.js", "build/Message.js", "build/MessageSender.js", "build/background.js"]
    },
    "web_accessible_resources": [
        "dark-mode.css"
    ],
    "description": "Make websites easier on your eyes.",
    "icons": {
        "128": "img/dark-mode-on-128.png",
        "48": "img/dark-mode-on-48.png",
        "16": "img/dark-mode-on-16.png"
    },
    "browser_action": {
        "default_icon": "img/dark-mode-on-48.png",
        "default_title": "Dark mode settings",
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ],
    "commands": {
        "toggleDark": {
            "suggested_key": {
                "default": "Ctrl+Shift+I"
            },
            "description": "Toggle dark mode"
        }
    }
}
