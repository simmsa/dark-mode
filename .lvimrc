function! AfterTscCompile(...)
  echo 'Typescript compile successful!'
endfunction

function! CompileTypescript()
    call jobstart('tsc', {'on_exit': function('AfterTscCompile')})
endfunction

augroup dark_mode
    au!
    au FileType json,javascript,typescript set shiftwidth=2 tabstop=2
    au BufWritePost *.ts,*.tsx call CompileTypescript()
augroup END

nnoremap <silent> gd :YcmCompleter GoToDefinition<CR>
nnoremap <silent> gt :YcmCompleter GetType<CR>
nnoremap <silent> gm :YcmCompleter GetDoc<CR>
